<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scheduler.genericscheduler.Vistas.Activities.HomeActivity"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@color/color_fondo">



    <android.support.v7.widget.CardView
        android:id="@+id/cardViewReserva"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imagen_perfil_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/cardViewReserva"
            android:layout_below="@+id/textViewReserva">

            <TextView
                android:id="@+id/textViewReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texto_reservar"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="@color/colorBlanco"
                android:textStyle="italic"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCancelar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/cardViewReserva"
        android:layout_below="@+id/cardViewReserva"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/cardViewCancelar"
            android:layout_below="@+id/textView3">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texto_mis_reservas"
                android:textSize="18sp"
                android:textColor="@color/colorBlanco"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textStyle="italic"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCerrarSesion"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/cardViewCancelar"
        android:layout_below="@+id/cardViewCancelar"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorLogout"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/cardViewCerrarSesion"
            android:layout_below="@+id/textView4">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texto_cerrar_sesion"
                android:textSize="18sp"
                android:textColor="@color/colorBlanco"
                android:textStyle="italic"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_perfil_facebook"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagen_perfil_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text=""
        android:textColor="@color/colorGris"
        android:textSize="18sp"/>

</RelativeLayout>
